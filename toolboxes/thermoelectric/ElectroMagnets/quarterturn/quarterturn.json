// -*- mode: javascript -*-
{
    "Name":"quarterturn",
    "ShortName":"quarterturn",
    "Parameters":
    {
        "sigma0":53e3,
        "T0":290,
        "alpha":3.6e-3,
        "Lorentz":2.47e-8
    },
    "Materials":
    {
        "omega":
        {
            "filename":"$cfgdir/omega.json"
        }
    },
    "BoundaryConditions":
    {
        "temperature":
        {
            "Robin":
            {
                "Rint":
                {
                    "expr1":"0.085", // h
                    "expr2":"293" // T_c
                },
                "Rext":
                {
                    "expr1":"0.085", // h
                    "expr2":"293" // T_c
                }
            }
        },
        "electric-potential":
        {
            "Dirichlet":
            {
                "V0":
                {
                    "expr":"0" // V_in
                },
                "V1":
                {
                    "expr":"0.04" // V_out
                }
            }
        }
    },
    "PostProcess":
    {
        "use-model-name":1,
        "thermo-electric":
        {
            "Exports":
            {
                "fields":["heat.temperature","electric.electric-potential","electric.current-density","electric.electric-field","heat.pid"]
            }
        },
        "heat":
        {
            "Measures":
            {
                "Statistics":
                {
                    "FluxV0":
                    {
                        "type":"integrate",
                        "expr":"-heat_omega_k*heat_dn_T:heat_omega_k:heat_dn_T",
                        "markers":"V0"
                    },
                    "FluxV1":
                    {
                        "type":"integrate",
                        "expr":"-heat_omega_k*heat_dn_T:heat_omega_k:heat_dn_T",
                        "markers":"V1"
                    },
                    "temp":
                    {
                        "type":["max","mean","min"],
                        "field":"temperature"
                    }
                },
                "Points":
                {
                    "closeToV0":
                    {
                        "coord":"{0.1,1.5,2.5}",
                        "fields":"temperature"
                    },
                    "closeToV1":
                    {
                        "coord":"{1.5,0.1,2.5}",
                        "fields":"temperature"
                    },
                    "middle":
                    {
                        "coord":"{1,1,2.5}",
                        "fields":"temperature"
                    }
                }
            },
            "Checkers":
            {
                "Measures":
                {
                    "Statistics_FluxV0_integrate":
                    {
                        "value":3.2424412042251499e-01,
                        "tolerance":1e-1
                    },
                    "Statistics_FluxV1_integrate":
                    {
                        "value":2.9981897008036867e-01,
                        "tolerance":1e-1
                    },
                    "Points_closeToV0_temperature":
                    {
                        "value":3.9070670041153238e+02,
                        "tolerance":1e-3
                    },
                    "Points_closeToV1_temperature":
                    {
                        "value":3.9068771950814232e+02,
                        "tolerance":1e-3
                    }
                }
            }
        },
        "electric":
        {
            "Measures":
            {
                "Statistics":
                {
                    "Intensity0":
                    {
                        "type":"integrate",
                        "expr":"-electric_omega_sigma*electric_dnP:electric_omega_sigma:electric_dnP",
                        "markers":"V0"
                    },
                    "Intensity1":
                    {
                        "type":"integrate",
                        "expr":"-electric_omega_sigma*electric_dnP:electric_omega_sigma:electric_dnP",
                        "markers":"V1"
                    },
                    "Power":
                    {
                        "type":"integrate",
                        "expr":"electric_omega_sigma*(electric_dxP^2+electric_dyP^2+electric_dzP^2):electric_omega_sigma:electric_dxP:electric_dyP:electric_dzP",
                        "markers":"omega"
                    }
                },
                "Points":
                {
                    "closeToV0":
                    {
                        "coord":"{0.1,1.5,2.5}",
                        "fields":"electric-potential"
                    },
                    "closeToV1":
                    {
                        "coord":"{1.5,0.1,2.5}",
                        "fields":"electric-potential"
                    },
                    "middle":
                    {
                        "coord":"{1,1,2.5}",
                        "fields":["electric-potential","electric-field" ]
                    }
                }
            },
            "Checkers":
            {
                "Measures":
                {
                    "Statistics_Intensity0_integrate":
                    {
                        "value":4.5856639122569022e+03,
                        "tolerance":1e-1
                    },
                    "Statistics_Intensity1_integrate":
                    {
                        "value":-4.5883146155551685e+03,
                        "tolerance":1e-1
                    },
                    "Points_closeToV0_electric-potential":
                    {
                        "value":1.6994365505515906e-03,
                        "tolerance":1e-3
                    },
                    "Points_closeToV1_electric-potential":
                    {
                        "value":3.8304153994278681e-02,
                        "tolerance":1e-3
                    }
                }
            }
        }
    }
}
