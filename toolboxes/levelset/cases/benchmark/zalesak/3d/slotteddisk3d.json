{
    "Name":"Slotted Disk 3D Benchmark",
    "ShortName":"SlottedDisk3D",
    "Models":
    {
	"equations":"Levelset"
    },
    "Parameters":
    {
	"centerx":"0.5",
	"centery":"0.75",
	"centerz":"0.5",
	"radius":"0.15",
	"slotwidth":"0.05",
	"slotlength":"0.25"
	
    },
    "InitialConditions":
    {
	"levelset":
	{
	    "Dirichlet":
	    {
		    "Omega":
		    {
		        "expr":" max( min( slotwidth+(x-centerx), min( slotwidth-(x-centerx), min( slotwidth+(z-centerz), min( slotwidth-(z-centerz), slotlength-(y-centery+radius) ) ) ) ), sqrt(pow(x-centerx,2)+pow(y-centery,2)+pow(z-centerz,2)) - radius ) :x:y:z:centerx:centery:centerz:radius:slotwidth:slotlength"
		    }
	    }
	}
    },
    "PostProcess":
    {
	    "PhysicalQuantities": ["volume, perimeter, velocity_com"],
        "Exports":
        {
            "fields":["advection-velocity", "pid"]
        },
        "Measures":
        {
            "Statistics":
            {
                "TestStat":
                {
                    "type":["min", "max", "mean"],
                    "field":"advection-velocity",
                    "marker":"Omega"
                }
            },
            "Norm":
            {
                "VelocityNorm":
                {
                    "type":"L2",
                    "field":"velocity"
                },
                "AvectionVelocityNorm":
                {
                    "type":"L2",
                    "field":"advection-velocity"
                },
                "HeavisideNorm":
                {
                    "type":"L2",
                    "field":"heaviside"
                },
                "DiracNorm":
                {
                    "type":"L2",
                    "field":"dirac"
                }
            }
        }
    }  
}
