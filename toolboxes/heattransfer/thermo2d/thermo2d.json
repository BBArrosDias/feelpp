// -*- mode: javascript -*-
{
    "Name": "Thermo dynamics",
    "ShortName":"ThermoDyn",
    "Model":"mythermicmodel",
    // "Parameters":
    // {
    //     "gravity":
    //     {
    //         "value":"-1"
    //     }
    // },
    "Materials":
    {
        "mymat":
        {
            "markers":"Omega",
            "name":"mymat",
            "k11":"10",//[ W/(m*K) ]
            "Cp":"1000.005", //[ J/(kg*K) ]
            "rho":"1.205" //[ kg/(m^3) ]
        }
    },
    "BoundaryConditions":
    {
        "temperature":
        {
            "Dirichlet":
            {
                "MarkerDirichlet":
                {
                    "expr":"293-10*(y-1)*(y+1):y"
                },
                "wall":
                {
                    "expr":"293+0.38*t:t"
                }
            },
            "Neumann":
            {
                "MarkerNeumann":
                {
                    "expr":"0:x" 
                }
            },
            "Robin":
            {
                "MarkerRobin":
                {
                    "expr1":"16.667",// h coeff
                    "expr2":"287"// temperature exterior
                }
            }
        }
    },
    "PostProcess":
    {
        "Exports":
        {
            "fields":["temperature"]
        },
        "Measures":
        {
            "Normal-Heat-Flux":["MarkerRobin","MarkerNeumann"],
            "Points":
            {
                "ptA":
                {
                    "coord":"{-0.6,0.6}",
                    "fields":"temperature"
                }
            }
        }
    }

}
