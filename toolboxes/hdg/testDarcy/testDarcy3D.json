            		"expr":"{-1/(3*Pi)*cos(Pi*x)*sin(Pi*y)*sin(Pi*z),-1/(3*Pi)*sin(Pi*x)*cos(Pi*y)*sin(Pi*z),-1/(3*Pi)*sin(Pi*x)*sin(Pi*y)*cos(Pi*z)}:x:y:z"
