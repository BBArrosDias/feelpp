AT_BANNER([life/lifediscr testsuite...])

AT_SETUP([test_geomap])
AT_KEYWORDS([discr geomap])
AT_CHECK([ $abs_top_builddir/testsuite/lifediscr/test_geomap],[0],[ignore],[ignore])
AT_CLEANUP

AT_SETUP([test_integration])
AT_KEYWORDS([discr integration])
