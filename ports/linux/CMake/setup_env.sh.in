#!/bin/bash

# Clang
if [[ -d @LLVM_INSTALL_PREFIX@ ]]; then
    export PATH=@LLVM_INSTALL_PREFIX@/bin:$PATH
    export LD_LIBRARY_PATH=@LLVM_INSTALL_PREFIX@/lib:$LD_LIBRARY_PATH
    export CC=@LLVM_INSTALL_PREFIX@/bin/clang
    export CXX=@LLVM_INSTALL_PREFIX@/bin/clang++
fi

# OpenMPI
export PATH=@OPENMPI_INSTALL_PREFIX@/bin:$PATH
export LD_LIBRARY_PATH=@OPENMPI_INSTALL_PREFIX@/lib:$LD_LIBRARY_PATH

# Gmsh
export GMSH_DIR=@GMSH_INSTALL_PREFIX@
export PATH=@GMSH_INSTALL_PREFIX@/bin:$PATH
export LD_LIBRARY_PATH=@GMSH_INSTALL_PREFIX@/lib:$LD_LIBRARY_PATH

# Boost
export BOOST_ROOT=@BOOST_INSTALL_PREFIX@
export LD_LIBRARY_PATH=@BOOST_INSTALL_PREFIX@/lib:$LD_LIBRARY_PATH

# PETSc
export PETSC_DIR=@PETSC_INSTALL_PREFIX@
export LD_LIBRARY_PATH=@PETSC_INSTALL_PREFIX@/bin:$LD_LIBRARY_PATH

# SLEPc
export SLEPC_DIR=@SLEPC_INSTALL_PREFIX@
export LD_LIBRARY_PATH=@SLEPC_INSTALL_PREFIX@/bin:$LD_LIBRARY_PATH

# ParaView
export CMAKE_PREFIX_PATH=@PARAVIEW_INSTALL_PREFIX@
export PATH=@PARAVIEW_INSTALL_PREFIX@/bin:$PATH
export LD_LIBRARY_PATH=@PARAVIEW_INSTALL_PREFIX@/lib:$LD_LIBRARY_PATH
